{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES6", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  "include": [
    "js/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
